!!! 5
%html

  %head
    %title Budgeteer
    = stylesheet_link_tag("kalendae.css")
    = stylesheet_link_tag("budgeteer.css")
    = javascript_include_tag("canvasjs.min.js")
    = javascript_include_tag("kalendae.standalone.min.js")
    = javascript_include_tag("budgeteer.js")

  %body
    %main
      %header
        %h1
          Budgeteer
          = link_to("Log out", logout_path) if logged_in?

      - if logged_in?
        = yield

      - elsif params[:action] == "register"
        = form_tag(register_path, :id => "register-form") do
          = text_field_tag(:"user[name]", nil, :placeholder => "Name")
          = text_field_tag(:"user[email]", nil, :placeholder => "E-mail")
          = password_field_tag(:"user[password]", nil, :placeholder => "Password")
          = password_field_tag(:"user[password_confirmation]", nil, :placeholder => "Password confirmation")
          = submit_tag("Register")
          = link_to("Log in", root_path)

      - else
        = form_tag(login_path, :id => "login-form") do
          = text_field_tag(:email, nil, :placeholder => "E-mail")
          = password_field_tag(:password, nil, :placeholder => "Password")
          = submit_tag("Log in")
          = link_to("Register", register_path)

      - if flash[:notice]
        #notice= flash[:notice]

      - if flash[:error]
        #error= flash[:error]
